<?xml version="1.0" encoding="utf-8" ?>

<Syntax name="JobEditorSyntax">
	<HighlightRuleWords name="operators">
		<Words>
			Job
		</Words>
		<IgnoreCase>false</IgnoreCase>
		<Foreground>#3800FF</Foreground>
		<FontWeight>Bold</FontWeight>
		<FontStyle>Normal</FontStyle>
	</HighlightRuleWords>
	
	<HighlightRuleExpression name="Numbers">
    <Expression>\b([0-9]+)\b</Expression>
    <IgnoreCase>true</IgnoreCase>
    <Foreground>#F68A1B</Foreground>
    <FontWeight>Normal</FontWeight>
    <FontStyle>Normal</FontStyle>
  </HighlightRuleExpression>

  <HighlightRuleExpression name="Comments">
    <Expression>\~{1}(.*?)\~{1}</Expression>
    <IgnoreCase>true</IgnoreCase>
    <Foreground>#0C9AA6</Foreground>
    <FontWeight>Normal</FontWeight>
    <FontStyle>Normal</FontStyle>
  </HighlightRuleExpression>

<HighlightRuleExpression name="Text">
	<Expression>\"{1}(.*?)\"{1}</Expression>
	<IgnoreCase>true</IgnoreCase>
	<Foreground>#746B8D</Foreground>
	<FontWeight>Normal</FontWeight>
	<FontStyle>Italic</FontStyle>
</HighlightRuleExpression>

</Syntax>
